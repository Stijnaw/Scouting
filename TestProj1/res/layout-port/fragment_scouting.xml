<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scouting_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context=".ScoutingFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6.4" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:weightSum="3" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/btnPlayer1"
                    style="@style/playerImageButton" >
                </ImageButton>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:padding="4dp" >

                    <LinearLayout style="@style/playerBanner" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtPlayer1"
                        style="@style/playerButtonText" />
                </FrameLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/btnPlayer2"
                    style="@style/playerImageButton" >
                </ImageButton>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:padding="4dp" >

                    <LinearLayout style="@style/playerBanner" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtPlayer2"
                        style="@style/playerButtonText" />
                </FrameLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/btnPlayer3"
                    style="@style/playerImageButton" >
                </ImageButton>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:padding="4dp" >

                    <LinearLayout style="@style/playerBanner" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtPlayer3"
                        style="@style/playerButtonText" />
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:weightSum="3" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/btnPlayer4"
                    style="@style/playerImageButton" >
                </ImageButton>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:padding="4dp" >

                    <LinearLayout style="@style/playerBanner" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtPlayer4"
                        style="@style/playerButtonText" />
                </FrameLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/btnPlayer5"
                    style="@style/playerImageButton" >
                </ImageButton>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:padding="4dp" >

                    <LinearLayout style="@style/playerBanner" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtPlayer5"
                        style="@style/playerButtonText" />
                </FrameLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/btnPlayer6"
                    style="@style/playerImageButton" >
                </ImageButton>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:padding="4dp" >

                    <LinearLayout style="@style/playerBanner" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtPlayer6"
                        style="@style/playerButtonText" />
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            tools:ignore="NestedWeights" >

            <Button
                android:id="@+id/btnActionTypeService"
                style="?android:attr/buttonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/Service" />

            <Button
                android:id="@+id/btnActionTypeReception"
                style="?android:attr/buttonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/Reception" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2" >

            <Button
                android:id="@+id/btnActionTypeAttack"
                style="?android:attr/buttonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/Attack" />

            <Button
                android:id="@+id/btnActionTypeBlock"
                style="?android:attr/buttonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/Block" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="5" >

            <Button
                android:id="@+id/btnActionScoreMinusMinus"
                style="@android:style/TextAppearance.Large"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/MinusMinus" />

            <Button
                android:id="@+id/btnActionScoreMinus"
                style="@android:style/TextAppearance.Large"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/Minus"
                android:textSize="@dimen/Large" />

            <Button
                android:id="@+id/btnActionScoreNull"
                style="@android:style/TextAppearance.Large"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/Null"
                android:textSize="@dimen/Large" />

            <Button
                android:id="@+id/btnActionScorePlus"
                style="@android:style/TextAppearance.Large"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/Plus"
                android:textSize="@dimen/Large" />

            <Button
                android:id="@+id/btnActionScorePlusPlus"
                style="@android:style/TextAppearance.Large"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/PlusPlus"
                android:textSize="@dimen/Large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2" >

            <Button
                android:id="@+id/btnControlsApply"
                style="?android:attr/buttonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/Apply" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/btnControlsUndo"
                    style="?android:attr/buttonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/Undo" />
                
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:padding="4dp" >

                    <LinearLayout style="@style/playerBanner" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtUndo"
                        style="@style/playerButtonText" />
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>